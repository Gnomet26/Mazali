<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Mazali" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar rangi -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigatsiya paneli (pastki qism) rangi -->
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Umumiy fon rangi -->
        <item name="android:colorBackground">@color/backgroundLight</item>

    </style>

    <style name="Widget.Mazali.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/surfaceLight</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="CategoryMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/red</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
