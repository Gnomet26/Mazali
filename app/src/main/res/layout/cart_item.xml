<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Mahsulot rasmi -->
        <ImageView
            android:id="@+id/imageProduct1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            android:background="@drawable/image_bg"
            android:contentDescription="Product image" />

        <!-- Mahsulot nomi -->
        <TextView
            android:id="@+id/textProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct1"
            android:layout_marginStart="12dp"
            android:text="Burger Set"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_alignTop="@id/imageProduct1"/>

        <!-- Kategoriya -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textProductName"
            android:layout_toEndOf="@id/imageProduct1"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Burger"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- Narx -->
        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageProduct1"
            android:layout_toEndOf="@id/imageProduct1"
            android:layout_marginStart="12dp"
            android:text="25 000 so'm"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary" />

        <!-- Mahsulot sonini boshqaruvchi panel -->
        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/imageProduct1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/quantity_bg"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/buttonMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="-"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textQuantity"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/buttonPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="+"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Delete tugmasi -->
        <ImageView
            android:id="@+id/buttonDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/quantityLayout"
            android:src="@drawable/baseline_delete_forever_24"
            android:contentDescription="Delete item"
            android:tint="@android:color/holo_red_dark"
            tools:ignore="UseAppTint" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
