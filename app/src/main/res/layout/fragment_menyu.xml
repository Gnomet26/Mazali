<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenyuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menyu_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menyu"
                android:textSize="24sp"
                android:textAlignment="center"
                android:padding="10dp"
                style="@style/Base.Theme.Mazali"/>
        </androidx.cardview.widget.CardView>

        <!-- Notification Button -->
        <ImageView
            android:id="@+id/notification_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@drawable/backbtn_background"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintTop_toBottomOf="@id/menyu_theme"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UseAppTint" />

        <!-- Search Panel -->
        <LinearLayout
            android:id="@+id/search_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box_bg"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menyu_theme"
            app:layout_constraintEnd_toStartOf="@id/notification_btn">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="@color/backgroundDark"
                android:layout_marginEnd="8dp"
                tools:ignore="UseAppTint" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mahsulot nomi boâ€˜yicha qidirish..."
                android:background="@null"
                android:padding="4dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Category Buttons Scroll -->
        <HorizontalScrollView
            android:id="@+id/categoriy_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_panel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:id="@+id/layoutCategories"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Barchasi"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCombo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Combo"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBurger"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Burgerlar"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShaurma"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Shaurma"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLavash"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Lavash"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSouslar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Souslar"
                    android:layout_marginEnd="8dp"
                    style="@style/CategoryMaterialButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDrinks"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Ichimliklar"
                    android:layout_marginEnd="5dp"
                    style="@style/CategoryMaterialButton"/>
            </LinearLayout>
        </HorizontalScrollView>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/menu_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoriy_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menyu_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/menyu_item"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Centered ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
