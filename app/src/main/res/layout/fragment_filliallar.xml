<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FilliallarFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/filial_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filiallaromiz"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            style="@style/Base.Theme.Mazali"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/filial_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:foregroundGravity="center"
        android:background="@drawable/backbtn_background"
        android:layout_margin="15dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filial_theme"
        android:src="@drawable/baseline_arrow_back_ios_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBranches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/filial_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>