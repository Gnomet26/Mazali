<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfilFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sozlamalar"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            style="@style/Base.Theme.Mazali"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="25dp">
                <ImageView
                    android:id="@+id/base_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masharipov Asadbek"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                app:layout_constraintStart_toEndOf="@id/user_image"
                app:layout_constraintTop_toTopOf="@id/user_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/user_image"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/tahrirlash_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contextClickable="true"
                        android:drawableLeft="@drawable/baseline_mode_edit_outline_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="@drawable/item_ripple"
                        android:text="Ma`lumotlarni tahrirlash"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#949494"/>

                    <Switch
                        android:id="@+id/theme_rejim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_mode_night_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:text="Ilova mavzusi"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#949494"/>

                    <TextView
                        android:id="@+id/language_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_language_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="@drawable/item_ripple"
                        android:text="Ilova tili"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#949494"/>


                    <TextView
                        android:id="@+id/connect_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_call_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:text="Biz bilan bog'laning"
                        android:background="@drawable/item_ripple"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#949494"/>


                    <TextView
                        android:id="@+id/filial_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:text="Filiallaromiz"
                        android:background="@drawable/item_ripple"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#949494"/>

                    <TextView
                        android:id="@+id/auth_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_login_24"
                        android:drawablePadding="10dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:clickable="true"
                        android:text="Tizimga kirish"
                        android:background="@drawable/item_ripple"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingOverlay_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminate="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>